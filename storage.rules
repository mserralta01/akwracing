rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isAdmin() {
      return request.auth != null && 
        request.auth.token.admin == true;
    }

    // Course images - public read, admin write
    match /courses/{allPaths=**} {
      allow read: if true;  // Anyone can view course images
      allow write: if isAdmin();  // Only admins can modify course images
    }

    // Other files - authenticated access only
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
  }
} 